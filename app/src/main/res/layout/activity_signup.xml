<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

<RelativeLayout


    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/signup">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="120dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:id="@+id/linear_1">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="25dp"
            android:src="@drawable/username"
            android:layout_marginLeft="20dp"
            android:id="@+id/image_user"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="user name"
            android:textColorHint="#a39898"
            android:textColor="#fff"
            android:background="@null"
            android:inputType="textPersonName"
            android:imeOptions="actionNext"
            android:id="@+id/user_name_et"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="4dp"
            />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#fff"
        android:layout_marginTop="170dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="30dp"
        android:id="@+id/view_lin_1"></View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="190dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:id="@+id/linear_2">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="25dp"
            android:src="@drawable/email"
            android:layout_marginLeft="20dp"
            android:id="@+id/image_email"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:imeOptions="actionNext"
            android:background="@null"
            android:id="@+id/email_et"
            android:textColorHint="#a39898"
            android:textColor="#fff"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="4dp"
            />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#fff"
        android:layout_marginTop="240dp"

        android:layout_marginLeft="50dp"
        android:layout_marginRight="30dp"
        android:id="@+id/view_lin_2"></View>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="260dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:id="@+id/linear_3">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="25dp"
            android:src="@drawable/mobileno"
            android:layout_marginLeft="20dp"
            android:id="@+id/image_mobile"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Mobile No."

            android:background="@null"
            android:inputType="phone"
            android:maxLength="10"

            android:textColorHint="#a39898"
            android:textColor="#fff"
            android:imeOptions="actionNext"
            android:id="@+id/mobile_et"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="4dp"
            />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#fff"
        android:layout_marginTop="310dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="30dp"
        android:id="@+id/view_lin_3"></View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="330dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:id="@+id/linear_4">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="25dp"
            android:src="@drawable/gender"
            android:layout_marginLeft="20dp"
            android:id="@+id/image_venus"/>
        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/gender">
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Male"/>
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Female"/>
        </RadioGroup>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#fff"
        android:layout_marginTop="380dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="30dp"
        android:id="@+id/view_lin_4"></View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="400dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:id="@+id/linear_5">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="25dp"
            android:src="@drawable/password"
            android:layout_marginLeft="20dp"
            android:id="@+id/image_key"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Password"
            android:inputType="textPassword"
            android:imeOptions="actionDone"
            android:background="@null"
            android:textColorHint="#a39898"
            android:textColor="#fff"
            android:id="@+id/password_et"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="4dp"
            />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#fff"
        android:layout_marginTop="450dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="30dp"
        android:id="@+id/view_lin_5"></View>


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="submit"
        android:background="#edcfc91f"
        android:textColor="#000"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="480dp"
        android:onClick="signup"
        android:layout_marginBottom="10dp"/>
</RelativeLayout>
    </RelativeLayout>


